<%- model_class = MagazinePageLayout -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:preview_file) %></th>
      <th><%= model_class.human_attribute_name(:template_file) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @magazine_page_layouts.each do |magazine_page_layout| %>
      <tr>
        <td><%= link_to magazine_page_layout.id, magazine_page_layout_path(magazine_page_layout) %></td>
        <td><%= magazine_page_layout.name %></td>
        <td><%= magazine_page_layout.description %></td>
        <td><%= magazine_page_layout.preview_file %></td>
        <td><%= magazine_page_layout.template_file %></td>
        <td><%=l magazine_page_layout.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_magazine_page_layout_path(magazine_page_layout), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      magazine_page_layout_path(magazine_page_layout),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_magazine_page_layout_path,
            :class => 'btn btn-primary' %>
