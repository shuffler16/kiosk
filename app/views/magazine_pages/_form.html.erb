<%= simple_form_for @magazine_page, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :page_layout_id, :collection => @magazine_page_layouts %>
  <%= f.input :magazine_id, :as => 'hidden', :input_html => {:value => params[:magazine_id]} %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                magazine_pages_path, :class => 'btn' %>
  </div>
<% end %>
